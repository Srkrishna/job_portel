<p id="notice"><%= notice %></p>

<h1>Job Posts</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Required on</th>
      <th>Etc</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_posts.each do |job_post| %>
      <tr>
        <% tmp = CompanyDetail.find(job_post.company_id) %>
        <td><%= tmp.name %></td>
        <td><%= job_post.required_on %></td>
        <td><%= job_post.etc %></td>
        <td><%= job_post.description %></td>
        <td><%= link_to 'Show', job_post %></td>
        <td><%= link_to 'Edit', edit_job_post_path(job_post) %></td>
        <td><%= link_to 'Destroy', job_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Post', new_job_post_path %>
