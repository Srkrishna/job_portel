<p id="notice"><%= notice %></p>

<h1>Requested Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Emp</th>
      <th>Job</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requested_jobs.each do |requested_job| %>
      <tr>
        <td><%= requested_job.emp_id %></td>
        <td><%= requested_job.job_id %></td>
        <td><%= link_to 'Show', requested_job %></td>
        <td><%= link_to 'Edit', edit_requested_job_path(requested_job) %></td>
        <td><%= link_to 'Destroy', requested_job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

